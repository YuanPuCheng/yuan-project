<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zihui.cwoa.system.dao.sys_department_menuMapper" >
  <resultMap id="BaseResultMap" type="com.zihui.cwoa.system.pojo.sys_department_menu" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="department_id" property="departmentId" jdbcType="INTEGER" />
    <result column="menu_id" property="menuId" jdbcType="INTEGER" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, department_id, menu_id
  </sql>
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.String" >
    select 
    <include refid="Base_Column_List" />
    from sys_department_menu
    where id = #{id,jdbcType=INTEGER}
  </select>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer" >
    delete from sys_department_menu
    where id = #{id,jdbcType=INTEGER}
  </delete>
<!--根据部门id和菜单id删除-->
  <delete id="deleteByDeparIdAndMenuId" parameterType="java.lang.Integer" >
    delete from sys_department_menu
    where department_id = #{departmentId,jdbcType=INTEGER} and menu_id = #{menuId,jdbcType=INTEGER}
  </delete>
  <insert id="insert" parameterType="java.lang.Integer" >
    insert into sys_department_menu (department_id, menu_id
      )
    values ( #{departmentId,jdbcType=INTEGER}, #{menuId,jdbcType=INTEGER}
      )
  </insert>


  <update id="updateByPrimaryKey" parameterType="com.zihui.cwoa.system.pojo.sys_department_menu" >
    update sys_department_menu
    set department_id = #{departmentId,jdbcType=VARCHAR},
      menu_id = #{menuId,jdbcType=VARCHAR}
    where id = #{id,jdbcType=VARCHAR}
  </update>

  <!--根据用户id查询对于菜单id  返回菜单id-->
  <select id="selectMenuIdByUserId" parameterType="java.lang.Integer" resultType="java.lang.Integer">
    SELECT menu_id from sys_department_menu where department_id in(
    SELECT department_id  from sys_user_department where user_id = #{userId})
  </select>

  <select id="selectMenuIdByDeparId" parameterType="java.lang.Integer" resultType="java.lang.Integer">
    select menu_id from sys_department_menu where department_id = #{departmentId}

  </select>
</mapper>